@model AlikHalafim.Models.Category
@{
    ViewData["Title"] = "Edit";
    var categories = ViewBag.Categories;
}

<div class="row register-form">
    <div class="col-md-8 offset-md-2">
        <form class="custom-form" method="post" enctype="multipart/form-data" asp-controller="Admin" asp-action="CategoryEditForm">
            <h1>צור קטגוריה</h1>
            <div class="form-row form-group">
                <div class="col-sm-6 input-column"><input asp-for="@Model.CategoryName" required value="@Model.CategoryName" class="form-control" type="text"></div>
                <div class="col-sm-4 label-column"><label class="col-form-label" for="name-input-field">שם </label></div>
            </div>
            <input hidden name="CatId" value="@Model.Id"/>
            <div class="form-row form-group">

                <div class="col-sm-6 input-column">
                    <select asp-for="@Model.ParentCategoryId" class="form-control" id="parentcategory">
                        <option value=""></option>
                        @foreach (var category in categories)
                        {
                            if (category.Id == Model.ParentCategoryId)
                            {
                                <option value="@category.Id" selected>@category.CategoryName</option>
                            }
                            else
                            {
                                <option value="@category.Id">@category.CategoryName</option>
                            }
                        }

                    </select>
                </div>
                <div class="col-sm-4 label-column">
                    <label for="parentcategory" class="bmd-label-floating">Parent Category</label>
                </div>
            </div>


            <div class="form-row form-group">
                <input hidden name="prevImage" value="@Model.CategoryImage"/>
                <div class="col-sm-6">
                    <input id="fileupload" name="imageFile" class="form-control" type="file">
                </div>
                <div class="col-sm-4 label-column">
                    <label for="fileupload" class="bmd-label-floating">תמונה</label>
                </div>
            </div>

            <button class="btn btn-success submit-button" type="submit">Edit</button>
        </form>
    </div>
</div>

