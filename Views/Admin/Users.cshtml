@model List<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "Users";
}

    <div class="container-fluid mt-3">



        <div class="row">
            <div class="form-group pull-right">
                <input type="text" class="search form-control" placeholder="חיפוש">
            </div>

            <span class="counter pull-right"></span>
            <table class="table table-hover table-bordered results">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Name</th>
                        <th>Lock</th>
                        <th>UnLock</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td>@user.UserName</td>
                                <td>
                                    <a asp-controller="Admin" asp-action="UserLock" asp-route-id="@user.Id"
                                       style="color:red">
                                        <i class="fas fa-lock"></i>
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="Admin" asp-action="UserunLock" asp-route-id="@user.Id"
                                       style="color:green">
                                        <i class="fas fa-lock-open"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
