@model List<Product>
@{
    ViewData["Title"] = "Category";

}

<div class="row">
    @foreach (var Product in Model)
    {
        <div class="col-md-4 col-sm-12">
            <div class="product-grid">
                <div class="product-image">
                    <a asp-controller="Product" asp-action="ProductPageDetail"
                       asp-route-id="@Product.Id" class="image">
                        <img class="pic-1" src="/../@Product.ProductImage">
                    </a>
                    <h3 class="title" dir="rtl">
                        <a asp-controller="Product" asp-action="ProductPageDetail"
                           asp-route-id="@Product.Id">@Product.ProductName</a>
                    </h3>
                    <h4 class="title" dir="rtl">
                        <a asp-controller="Manufacturer" asp-action="ManufacturerProducts"
                           asp-route-man="@Product.Manufacturer">@Product.Manufacturer</a>
                    </h4>
                    <div class="price">&#8362; @Product.Price</div>
                </div>
                <div class="product-content">
                    <span class="add-to-cart">
                        <a asp-controller="Cart" asp-action="Add"
                           asp-route-id="@Product.Id">הוסף לסל</a>
                    </span>
                </div>
            </div>
        </div>
    }
</div>


<div class="container">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @{
                int page = @ViewBag.currentPage;
                int prevPage = page - 1;
                int nextPage = page + 1;
                var pagesCount = @ViewBag.pagesCount;
                int pageNum = 1;
            }
            @if (prevPage == 0)
            {
                <li class="page-item disabled">
                    <a class="page-link"
                       asp-controller="Home" asp-action="Index" asp-route-page="@prevPage"
                       aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-controller="Home" asp-action="Index" asp-route-page="@prevPage"
                       aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
            }
            @while (pageNum <= pagesCount)
            {
                if (pageNum == page)
                {
                    <li class="page-item active">
                        <a class="page-link"
                           asp-controller="Home" asp-action="Index" asp-route-page="@pageNum">
                            @pageNum
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link"
                           asp-controller="Home" asp-action="Index" asp-route-page="@pageNum">
                            @pageNum
                        </a>
                    </li>
                }
                pageNum++;
            }

            @if (nextPage > pagesCount)
            {
                <li class="page-item disabled">
                    <a class="page-link"
                       asp-controller="Home" asp-action="Index" asp-route-page="@nextPage"
                       aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-controller="Home" asp-action="Index" asp-route-page="@nextPage"
                       aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>

